  "protocol_handlers": [
    {
      "protocol": "web+finca",
      "url": "/index.html?action=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/json": [".json"]
      }
    }
  ],

  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },

  "edge_side_panel": {
    "preferred_width": 400
  },

  "handle_links": "preferred",

  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".csv", ".json", ".xlsx"]
        }
      ]
    }
  },

  "permissions": [
    "geolocation",
    "camera",
    "microphone",
    "notifications",
    "background-sync",
    "background-fetch",
    "persistent-storage"
  ],

