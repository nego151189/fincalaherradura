{
  "name": "finca-la-herradura",
  "version": "1.2.0",
  "description": "Sistema integral de gestión para Finca La Herradura - Producción de limones",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore",
    "lint": "eslint . --ext js,html --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,html --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "firebase:emulators": "firebase emulators:start",
    "firebase:init": "firebase init",
    "clean": "rimraf dist",
    "reinstall": "rimraf node_modules package-lock.json && npm install",
    "update-deps": "npx npm-check-updates -u && npm install",
    "size-check": "npm run build && bundlesize",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html"
  },
  "keywords": [
    "agricultura",
    "finca",
    "gestión",
    "limones",
    "pwa",
    "firebase",
    "javascript",
    "agritech",
    "farm-management",
    "guatemala"
  ],
  "author": {
    "name": "Finca La Herradura",
    "email": "admin@fincalaherradura.com",
    "url": "https://fincalaherradura.com"
  },
  "license": "MIT",
  "homepage": "https://fincalaherradura.web.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/finca-la-herradura/management-system.git"
  },
  "bugs": {
    "url": "https://github.com/finca-la-herradura/management-system/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "dependencies": {
    "firebase": "^10.7.1",
    "chart.js": "^4.4.1",
    "date-fns": "^3.0.6",
    "lodash-es": "^4.17.21",
    "uuid": "^9.0.1",
    "idb": "^7.1.1",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-firebase": "^0.1.0",
    "@vitejs/plugin-legacy": "^5.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "jsdom": "^23.0.1",
    "rimraf": "^5.0.5",
    "npm-check-updates": "^16.14.12",
    "bundlesize": "^0.18.1",
    "lighthouse": "^11.4.0",
    "firebase-tools": "^13.0.2",
    "cross-env": "^7.0.3",
    "terser": "^5.26.0"
  },
  "peerDependencies": {
    "firebase": ">=10.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "300kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true,
      "serviceworker": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "Chart": "readonly",
      "firebase": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "endOfLine": "lf"
  },
  "vitest": {
    "environment": "jsdom",
    "globals": true,
    "setupFiles": [
      "./test/setup.js"
    ]
  },
  "workbox": {
    "globDirectory": "dist/",
    "globPatterns": [
      "**/*.{html,js,css,png,jpg,jpeg,svg,ico,woff,woff2,ttf,eot}"
    ],
    "swDest": "dist/sw.js",
    "runtimeCaching": [
      {
        "urlPattern": "https://fonts.googleapis.com/.*",
        "handler": "CacheFirst",
        "options": {
          "cacheName": "google-fonts-cache",
          "expiration": {
            "maxEntries": 10,
            "maxAgeSeconds": 31536000
          }
        }
      },
      {
        "urlPattern": "https://cdnjs.cloudflare.com/.*",
        "handler": "CacheFirst",
        "options": {
          "cacheName": "cdn-cache",
          "expiration": {
            "maxEntries": 50,
            "maxAgeSeconds": 31536000
          }
        }
      }
    ]
  },
  "firebase": {
    "projects": {
      "default": "finca-la-herradura",
      "production": "finca-la-herradura",
      "staging": "finca-la-herradura-dev"
    }
  },
  "pwa": {
    "name": "Finca La Herradura",
    "short_name": "Finca Manager",
    "description": "Sistema integral de gestión agrícola",
    "theme_color": "#22c55e",
    "background_color": "#ffffff",
    "display": "standalone",
    "orientation": "portrait-primary",
    "start_url": "/",
    "scope": "/",
    "icons": [
      {
        "src": "/icons/icon-72x72.png",
        "sizes": "72x72",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-96x96.png",
        "sizes": "96x96",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-128x128.png",
        "sizes": "128x128",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-144x144.png",
        "sizes": "144x144",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-152x152.png",
        "sizes": "152x152",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-384x384.png",
        "sizes": "384x384",
        "type": "image/png"
      },
      {
        "src": "/icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  },
  "config": {
    "firebase": {
      "apiUrl": "https://firestore.googleapis.com/v1/projects/finca-la-herradura/databases/(default)/documents",
      "authDomain": "finca-la-herradura.firebaseapp.com",
      "projectId": "finca-la-herradura",
      "storageBucket": "finca-la-herradura.appspot.com",
      "messagingSenderId": "123456789012",
      "appId": "1:123456789012:web:abcdef123456789012345678",
      "measurementId": "G-XXXXXXXXXX"
    },
    "app": {
      "name": "Finca La Herradura",
      "version": "1.2.0",
      "environment": "production",
      "debug": false,
      "offlineSupport": true,
      "analytics": true,
      "pushNotifications": true
    },
    "features": {
      "weather": true,
      "trees": true,
      "production": true,
      "expenses": true,
      "sales": true,
      "prices": true,
      "reminders": true,
      "treatments": true,
      "business": true,
      "irrigation": true
    }
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://fincalaherradura.com/support"
    }
  ],
  "files": [
    "dist",
    "public",
    "src",
    "index.html",
    "vite.config.js",
    "firebase.json",
    "firestore.rules",
    "firestore.indexes.json"
  ]
}